<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.UserMapper" >
    <resultMap id="UserResult" type="com.example.demo.enity.User" >
        <id property="id" column="id" />
        <result property="user_id" column="user_id" />
        <result property="salt" column="salt" />
        <result property="username" column="user_name" />
        <result property="password" column="user_pwd" />
        <result property="user_headimg" column="user_headimg" />
        <result property="phone" column="user_phone" />
        <result property="email" column="user_email" />
        <result property="create_at" column="create_at" />
        <result property="update_at" column="update_at" />
    </resultMap>
    
    <select id="login" resultType="com.example.demo.enity.User">
        select username, userpassword from User where username=#{userName}
    </select>

    <insert id="register" useGeneratedKeys="true">
        insert into User(username, userpassword) values (#{user.userName}, #{user.userPassword})
    </insert>

    <select id="getUserInfo" resultType="com.example.demo.enity.User">
        select username from User where username=#{user.userName}
    </select>

</mapper>